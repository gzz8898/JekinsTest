<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.example.myapplication.LevelTextView
            android:id="@+id/ltv"
            app:ltv_titles="@array/bgColors"
            app:ltv_title_colors="@array/tvColors"
            app:ltv_backGround_colors="@array/bgColors"
            app:ltv_corner="2dp"
            app:ltv_strokeColors="@array/tvColors"
            app:ltv_strokeWidth="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    </com.example.myapplication.LevelTextView>
    <Button
            android:drawableLeft="@drawable/tselector"
            android:layout_width="match_parent"
            android:id="@+id/btn"
            android:layout_height="100dp"/>
    <com.example.myapplication.CustomerRatingView
            android:id="@+id/crv"
            android:padding="16dp"
            app:default_icon="@drawable/xing_hui"
            android:background="@color/bar_grey"
            app:rating_icon="@drawable/xing_huang"
            app:inner_space="10dp"
            app:enable_rating="true"
            app:max_rating_num="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>